# Server
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="postgresql://claims_user:claims_password@localhost:5433/claims_db"

# Auth (BetterAuth)
BETTER_AUTH_SECRET="change-this-to-a-secure-random-string"
BETTER_AUTH_URL="http://localhost:3001"

# Frontend URLs (comma-separated for multiple origins)
CORS_ORIGIN="http://localhost:5173"

# Claims
CLAIM_NUMBER_SALT="change-this-to-a-secure-random-string"

# R2 Storage (Cloudflare)
R2_ACCOUNT_ID="your-account-id"
R2_ACCESS_KEY_ID="your-access-key-id"
R2_SECRET_ACCESS_KEY="your-secret-access-key"
R2_BUCKET_NAME="claims-manager"
R2_PUBLIC_URL="https://your-public-url.r2.dev"

# Email
# Development: Uses Inbucket (docker-compose) - no config needed
SMTP_HOST="localhost"
SMTP_PORT="2525"
EMAIL_FROM="noreply@claims.local"
# Production: Uses Resend
# RESEND_API_KEY="re_xxx"
# EMAIL_FROM="noreply@yourdomain.com"
